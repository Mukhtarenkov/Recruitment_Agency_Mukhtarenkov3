<Page x:Class="Recruitment_Agency_Mukhtarenkov3.Pages.ResumeADD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Recruitment_Agency_Mukhtarenkov3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление Резюме">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.ColumnSpan="2" Grid.RowSpan="3" Width="700" >
            <StackPanel Orientation="Vertical"  Width="400">
                <TextBlock Text="Имя"  Style="{StaticResource generaltxtblock}" HorizontalAlignment="Right" ></TextBlock>
                <TextBlock Text="Фамилия" Style="{StaticResource generaltxtblock}" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Text="Отчество" Style="{StaticResource generaltxtblock}" HorizontalAlignment="Right" ></TextBlock>
                <TextBlock Text="Образование" Style="{StaticResource generaltxtblock}" HorizontalAlignment="Right" Width="200" ></TextBlock>
                <TextBlock Text="Телефонный номер" Style="{StaticResource generaltxtblock}" HorizontalAlignment="Right" Width="300" ></TextBlock>
                <TextBlock Text="Навыки, способности" Style="{StaticResource generaltxtblock}" HorizontalAlignment="Right" Width="340" ></TextBlock>
                <TextBlock Text="Почта" Style="{StaticResource generaltxtblock}" HorizontalAlignment="Right" ></TextBlock>

            </StackPanel>
            <Separator Background="Transparent" Width="20"/>
            <StackPanel Orientation="Vertical" Width="300">
                <TextBox x:Name="Name" Width="300" Height="40"/>
                <TextBox x:Name="FamilyName" Width="300" Height="40"/>
                <TextBox x:Name="DadsName" Width="300" Height="40"/>
                <TextBox x:Name="Education" Width="300" Height="40"/>
                <TextBox x:Name="PhoneNumber" Width="300" Height="40"/>
                <TextBox x:Name="Proficiencies" Width="300" Height="40"/>
                <TextBox x:Name="Mail" Width="300" Height="40"/>
            </StackPanel>
        </StackPanel>

        <Button x:Name="btnCreate" Content="Добавить" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="1" Width="200" Click="btnCreate_Click" Style="{StaticResource Save}"></Button>

    </Grid>
</Page>

